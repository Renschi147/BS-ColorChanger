<Window x:Class="FirstWpfAPPColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstWpfAPPColorPicker"
        mc:Ignorable="d"
        Title="ColorChanger" Height="450" Width="800" ResizeMode="NoResize" Icon="/iconForColorChanger.ico">
    <Grid x:Name="ColorPicker" Background="#FF3A3A3A">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="647*"/>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="54,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="57" Foreground="White" FontFamily="Adobe Gothic Std L" Grid.Column="1"><Run Text="Red"/><Run Language="de-de" Text=":"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="54,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56" Foreground="White" FontFamily="Adobe Gothic Std L" Grid.Column="1"><Run Text="Green"/><Run Language="de-de" Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="54,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56" Foreground="White" FontFamily="Adobe Gothic Std L" Grid.Column="1"><Run Text="Blue"/><Run Language="de-de" Text=":"/></TextBlock>
        <Slider x:Name="RedSlider" Margin="94,80,57,304" Maximum="255" LargeChange="10" SmallChange="1" IsSnapToTickEnabled="True" ValueChanged="RedSlider_ValueChanged" Background="{x:Null}" Grid.Column="1"/>
        <Slider x:Name="GreenSlider" Margin="94,106,58,280" Maximum="255" SmallChange="1" LargeChange="10" IsSnapToTickEnabled="True" ValueChanged="GreenSlider_ValueChanged" Grid.Column="1"/>
        <Slider x:Name="BlueSlider" Margin="94,133,58,248" Maximum="255" SmallChange="1" LargeChange="10" IsSnapToTickEnabled="True" IsSelectionRangeEnabled="True" ValueChanged="BlueSlider_ValueChanged" Grid.Column="1"/>
        <Label x:Name="BlueSliderValue" Content="{Binding Value, ElementName=BlueSlider, StringFormat=\{0:F0\}}" HorizontalAlignment="Left" Margin="589,127,0,0" VerticalAlignment="Top" Width="81" Background="#FF3A3A3A" Foreground="White" BorderBrush="#FFB4B4B4" Height="25" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Overloader" HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top" Click="Button_Click" Background="#FF585858" Foreground="White" FontSize="10" FontFamily="Adobe Gothic Std L" Grid.ColumnSpan="2"/>
        <Label x:Name="GreenSliderValue" Content="{Binding Value, ElementName=GreenSlider, StringFormat=\{0:F0\}}" HorizontalAlignment="Left" Margin="589,101,0,0" VerticalAlignment="Top" Width="81" Background="#FF3A3A3A" Foreground="White" BorderBrush="#FFB4B4B4" Height="25" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label x:Name="RedSliderValue" Content="{Binding Value, ElementName=RedSlider, StringFormat=\{0:F0\}}" HorizontalAlignment="Left" Margin="589,76,0,0" VerticalAlignment="Top" Width="81" Background="#FF3A3A3A" Foreground="White" BorderBrush="#FFB4B4B4" Height="25" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Select File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Button_Click_1" Background="#FF585858" Foreground="White" FontFamily="Adobe Gothic Std L" Grid.ColumnSpan="2"/>
        <Button Content="Reset Overload" HorizontalAlignment="Left" Margin="13,185,0,0" VerticalAlignment="Top" Click="Button_Click_2" Background="#FF585858" Foreground="White" FontFamily="Adobe Gothic Std L" FontSize="10" Width="92" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="54,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56" Foreground="White" FontFamily="Adobe Gothic Std L" Grid.Column="1"><Run Language="de-de" Text="Alpha:"/></TextBlock>
        <Slider x:Name="AlphaSlider" Margin="94,160,57,221" Maximum="255" SmallChange="1" LargeChange="10" IsSnapToTickEnabled="True" IsSelectionRangeEnabled="True" ValueChanged="AlphaSlider_ValueChanged" Background="#003A3A3A" Grid.Column="1"/>
        <Label x:Name="AlphaSliderValue" Content="{Binding Value, ElementName=AlphaSlider, StringFormat=\{0:F0\}}" HorizontalAlignment="Left" Margin="589,154,0,0" VerticalAlignment="Top" Width="81" Background="#FF3A3A3A" Foreground="White" BorderBrush="#FFB4B4B4" Height="25" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Save to User" HorizontalAlignment="Center" Margin="0,9,0,0" VerticalAlignment="Top" Click="SaveToUserClick" Grid.Column="2" Width="90" Height="30" FontFamily="Adobe Gothic Std L" FontSize="10" FontWeight="Bold" Foreground="White" OpacityMask="Red" Cursor="Help">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,0" StartPoint="1,1" SpreadMethod="Pad">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform AngleX="0" CenterX="0.5" CenterY="0.5" AngleY="3"/>
                            <RotateTransform CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="Red" Offset="1"/>
                    <GradientStop Color="#FF00CAFF" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Menu x:Name="My_Menu" Margin="0,234,28,125" Background="#FF3A3A3A" Grid.ColumnSpan="2">
            <Button x:Name="Color1" Content="Color 1" Click="Color_Click" Background="#FF585858" FontFamily="Adobe Gothic Std L" FontSize="10" Width="50" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
            <Button x:Name="Color2" Content="Color 2" Click="Color_Click" FontSize="10" FontFamily="Adobe Gothic Std L" Height="30" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF585858" Foreground="White"/>
            <Button x:Name="Color3" Content="Color 3" Click="Color_Click" FontSize="10" FontFamily="Adobe Gothic Std L" Width="50" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF585858" Foreground="White"/>
            <Button x:Name="Color4" Content="Color 4" Click="Color_Click" FontFamily="Adobe Gothic Std L" FontSize="10" Height="30" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF585858" Foreground="White"/>
        </Menu>
        <Menu x:Name="LeftOrRight" Margin="54,9,0,0" RenderTransformOrigin="0.5,0.5" Background="#FF3A3A3A" HorizontalAlignment="Left" VerticalAlignment="Top" Width="589" Grid.Column="1">
            <Menu.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.006"/>
                    <RotateTransform Angle="-0.147"/>
                    <TranslateTransform Y="0.03"/>
                </TransformGroup>
            </Menu.RenderTransform>
            <Button x:Name="LeftSaber" Content="Left Saber" Background="#FF585858" Click="Click_ColorLeftOrRight" Width="100" Height="30" Margin="0,-0.7,0,0" Foreground="White" FontSize="10" FontFamily="Adobe Gothic Std L"/>
            <Button x:Name="RightSaber" Content="Right Saber" Click="Click_ColorLeftOrRight" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-0.5,0,0" Background="#FF585858" Foreground="White" FontFamily="Adobe Gothic Std L" FontSize="10"/>
            <Button x:Name="EnvironmentOuter" Content="Environment Outer" Click="Click_ColorLeftOrRight" Background="#FF585858" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-0.5,0,0" Foreground="White" FontFamily="Adobe Gothic Std L" FontSize="10"/>
            <Button x:Name="EnvironmentInner" Content="Environment Inner" Click="Click_ColorLeftOrRight" Background="#FF585858" Margin="0,-0.5,0,0" Height="30" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontFamily="Adobe Gothic Std L" FontSize="10"/>
            <Button x:Name="Wall" Content="Obstacle Color" Click="Click_ColorLeftOrRight" Background="#FF585858" Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,-0.5,0,0" Foreground="White" FontFamily="Adobe Gothic Std L" FontSize="10" FontWeight="Normal"/>
        </Menu>
        <Button x:Name="ClearAllCampaign" Content="Complete all campaign missions" Margin="542,372,0,0" Click="ClearAllCampaigns" Foreground="White" Background="{x:Null}" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="180" Grid.Column="1" FontFamily="Adobe Gothic Std L" FontSize="10"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,364,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Height="28" FontFamily="Adobe Gothic Std L" Text="Code by Renschi#4562 and Error404X_X#1352" Cursor="Wait" Grid.ColumnSpan="2"/>
        <Label x:Name="ColorPreview" Content="" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Height="100" Width="100" Background="Black" Grid.ColumnSpan="2"/>
        <Label Content="Color Preview" Margin="16,54,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Adobe Gothic Std L" Background="#0065651B" Foreground="White" Grid.ColumnSpan="2"/>
        <Label Content="Custom Color Scheme Slots" Margin="9,205,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Adobe Gothic Std L" Background="#0065651B" Foreground="White" Width="213" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="1" Y="0.1"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBlock HorizontalAlignment="Left" Margin="10,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" FontFamily="Adobe Gothic Std L" Text="Design by" Cursor="Wait" Foreground="White" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="18,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" FontFamily="Adobe Gothic Std L" Text="_L05am#5958" Cursor="" Grid.Column="1">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0,1" StartPoint="1,0" MappingMode="RelativeToBoundingBox" SpreadMethod="Pad">
                    <GradientStop Color="#FFFA64FF" Offset="0.25"/>
                    <GradientStop Color="#FFFF64FF" Offset="0.75"/>
                    <GradientStop Color="#FE64FFFF" Offset="0"/>
                    <GradientStop Color="#FE64FFFF" Offset="1"/>
                    <GradientStop Color="#FEFFFFFF" Offset="0.5"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <Button x:Name="Auto_Overload" Grid.Column="1" Content="Auto-Overload" HorizontalAlignment="Left" Margin="110,185,0,0" VerticalAlignment="Top" Background="#FF585858" Foreground="White" Width="90" Height="24" FontFamily="Adobe Gothic Std L" FontSize="10" Click="AutoOversaturate"/>
        <Label Content="Overload Count: " HorizontalAlignment="Left" Margin="6,324,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="33" Width="111" Foreground="White" FontFamily="Adobe Gothic Std L"/>
        <TextBox x:Name="OverloadCountBox" Grid.Column="1" HorizontalAlignment="Left" Margin="58,328,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FF585858" Foreground="White" TextChanged="OverloadCountBox_TextChanged" IsTabStop="False" Text="1" FontFamily="Adobe Gothic Std L"/>

    </Grid>
</Window>
